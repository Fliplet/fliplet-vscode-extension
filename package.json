{
	"name": "fliplet",
	"displayName": "Fliplet Apps",
	"description": "Manage code for your Fliplet Apps via Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:fliplet.signin"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fliplet.signin",
				"title": "Hello World"
			}
		],
		"viewsWelcome": [
			{
				"view": "account",
				"contents": "You are not logged in. Please log in with your Fliplet account to continue. [Learn more](https://developers.fliplet.com/)\n[Sign in with Fliplet](command:fliplet.signin)"
			},
			{
				"view": "apps",
				"contents": "Please log in to view your apps."
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "apps",
					"title": "Fliplet",
					"icon": "media/logo.svg"
				}
			]
		},
		"views": {
			"apps": [
				{
					"id": "account",
					"name": "Account",
					"icon": "media/logo.svg",
					"contextualTitle": "Your Fliplet account"
				},
				{
					"id": "apps",
					"name": "Your apps",
					"icon": "media/logo.svg",
					"contextualTitle": "Your Fliplet apps"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
